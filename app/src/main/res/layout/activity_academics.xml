<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:weightSum="7"
    tools:context=".Academics">

    <Button
        android:id="@+id/syllabusButtonId"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Syllabus"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:backgroundTint="#d9f2e6"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:textColor="#000000"
        android:drawableRight="@drawable/getter_than_20_20"
        android:drawableLeft="@drawable/syllabus"

        />

    <Button
        android:id="@+id/firstYearButtonId"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="First Year"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:backgroundTint="#FFFFFF"
        android:drawableLeft="@drawable/c_programming"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:drawableRight="@drawable/getter_than_20_20"
        android:textColor="#000000"

        />
    <Button
        android:id="@+id/secondYearButtonId"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Second Year"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:drawableLeft="@drawable/cpp_programming"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:drawableRight="@drawable/getter_than_20_20"

        />
    <Button
        android:id="@+id/thirdYearButtonId"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Third Year"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/networking"
        android:drawableRight="@drawable/getter_than_20_20"

        />
    <Button
        android:id="@+id/fourthYearButtonId"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Fourth Year"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/python"
        android:drawableRight="@drawable/getter_than_20_20"

        />


</LinearLayout>