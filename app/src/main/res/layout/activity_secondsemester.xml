<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:weightSum="10"

    tools:context=".Secondsemester">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Second semester"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_margin="0dp"
        android:gravity="center"
        android:textColor="#000000"
        android:background="#e6eeff"
        />
    <Button
        android:id="@+id/cseProgrammingButtonId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Fundamentals of Programming "
        android:textSize="20dp"
        android:textAllCaps="false"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:layout_weight="1"
        android:drawableRight="@drawable/getter_than_20_20"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/cseDLDButtonId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Digital Logic Design "
        android:textSize="20dp"
        android:textAllCaps="false"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:layout_weight="1"
        android:drawableRight="@drawable/getter_than_20_20"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/cseChemistryButtonId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Chemistry"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:layout_weight="1"
        android:drawableRight="@drawable/getter_than_20_20"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/cseIntegrationButtonId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Methods of Integration"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:layout_weight="1"
        android:drawableRight="@drawable/getter_than_20_20"
        android:layout_margin="5dp"

        />
</LinearLayout>