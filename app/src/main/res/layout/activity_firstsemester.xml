<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:weightSum="10"

    tools:context=".Firstsemester">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="First semester"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_margin="0dp"
        android:gravity="center"
        android:background="#e6eeff"
        />
    <Button
        android:id="@+id/cseFundamentalsButtonId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Fundamentals of Computers"
        android:textColor="#000707"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:backgroundTint="#ffffff"
        android:layout_weight="1"
        android:drawableRight="@drawable/getter_than_20_20"
        android:layout_margin="5dp"

        />
    <Button
        android:id="@+id/cseDiscreteButtonId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Discrete Mathematics"
        android:textColor="#000000"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:backgroundTint="#ffffff"
        android:layout_weight="1"
        android:drawableRight="@drawable/getter_than_20_20"
        android:layout_margin="5dp"

        />
    <Button
        android:id="@+id/cseEeeButtonId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Electrical Circuits"
        android:textColor="#000707"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:backgroundTint="#ffffff"
        android:layout_weight="1"
        android:drawableRight="@drawable/getter_than_20_20"
        android:layout_margin="5dp"

        />
    <Button
        android:id="@+id/csePhysiceButtonId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Physics"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:backgroundTint="#ffffff"
        android:textColor="#000707"
        android:layout_weight="1"
        android:drawableRight="@drawable/getter_than_20_20"
        android:layout_margin="5dp"

        />
    <Button
        android:id="@+id/cseCalculusButtonId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Differential and Integral Calculus"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:backgroundTint="#ffffff"
        android:textColor="#000707"
        android:drawableRight="@drawable/getter_than_20_20"

        android:layout_weight="1"
        android:layout_margin="5dp"
        />


</LinearLayout>