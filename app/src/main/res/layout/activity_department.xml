<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    tools:context=".Department">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Academics "
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#060E08"
        android:layout_marginBottom="10dp"
        android:background="#DFE5E5"


        />
    <Button
       android:id="@+id/cseButtonId"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Computer Science and Engineering"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:layout_margin="2dp"
        android:drawableRight="@drawable/getter_than_20_20"

        />

    <Button
        android:id="@+id/banButtonId"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Bangla"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        android:layout_margin="2dp"
        android:drawableRight="@drawable/getter_than_20_20"
        />

    <Button
        android:id="@+id/engButtonId"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="English"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        android:layout_margin="2dp"
        android:drawableRight="@drawable/getter_than_20_20"
        />

    <Button
        android:id="@+id/ecoButtonId"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Economics"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:layout_margin="2dp"
        android:drawableRight="@drawable/getter_than_20_20"
        />

</LinearLayout>